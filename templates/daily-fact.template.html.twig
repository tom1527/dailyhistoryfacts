<div id="first" class="visible row g-1 gy-3" style="display: block">
    <div class="col align-self-start col-lg-auto col-sm-12 fs-3">
        <div class="card bg-light">
            <div class="card-body">
                {% if errorTitle %}
                    <h1 class="card-title d-flex justify-content-between align-items-center" style="font-weight: bold;">{{ errorTitle }}</h1>
                {% else %}
                    <h1 class="card-title d-flex justify-content-between align-items-center"><b id="firstFactDate"></b><button onclick="changeFact()" type="button" id="changeFact" class="btn btn-primary"><b>See alternate fact</b></button></h1>
                {% endif %}
                <br/>
                <b id="fact1">
                    {% if dailyFactInfo and dailyFactInfo | first.fact %}
                        {{dailyFactInfo | first.fact}}
                    {% else %}
                        {{ errorDescription }}
                    {% endif %}
                </b>
                <br/>
                <br/>
                <p class="card-link text-secondary">
                {% if dailyFactInfo | first.link %}
                    Click <a id="link1" href="{{dailyFactInfo | first.link}}" target="blank"><b>here</b></a> to learn more.
                {% else %}
                    Error: link not found.
                {% endif %}
                </p>
            </div>
        </div>

    </div>

    {% if dailyFactInfo | first.image %}
        <div class="col align-self-start col-12 p-1">
            <a id="image1" href="{{dailyFactInfo | first.image}}" target="blank">
                <img style="width: 500px; height:auto;" src="{{dailyFactInfo | first.image}}" class="border img-fluid" alt="associated image"></img>
            </a>
        </div>
    {% else %}
        <div class="col align-self-start col-12 p-1">
            <a id="image1" href="" target="blank">
                <img style="width: 500px; height:auto;" src="" class="border img-fluid" alt="associated image"></img>
            </a>
        </div>
    {% endif %}
</div>

<div id="last" class="hidden row g-1 gy-3" style="display: none;">
    <div class="col align-self-start col-lg-auto col-sm-12 fs-3">
        <div class="card bg-light">
            <div class="card-body">
                {% if errorTitle %}
                    <h1 class="card-title d-flex justify-content-between align-items-center"><b id="lastFactDate"></b><button onclick="changeFact()" type="button" class="btn btn-primary"><b>See alternate fact</b></button></h1>
                {% else %}
                     <h1 class="card-title d-flex justify-content-between align-items-center"><b id="lastFactDate"></b><button onclick="changeFact()" type="button" class="btn btn-primary"><b>See alternate fact</b></button></h1>
                {% endif %}
                <br/>
                <b id="fact2">
                    {% if dailyFactInfo and dailyFactInfo | last.fact %}
                        {{dailyFactInfo | last.fact}}
                    {% else %}
                        {{ errorDescription }}
                    {% endif %}
                </b>
                <br/>
                <br/>
                <p class="card-link text-secondary">
                {% if dailyFactInfo | last.link %}
                    Click <a id="link2" href="{{dailyFactInfo | last.link}}" target="blank"><b>here</b></a> to learn more.
                {% else %}
                    Error: link not found.
                {% endif %}
                </p>
            </div>
        </div>
        <div class="card bg-light">
        </div>
    </div>

    {% if dailyFactInfo | first.image %}
        <div class="col align-self-start col-12 p-1">
            <a id="image2" href="{{dailyFactInfo | last.image}}" target="blank">
                <img style="width: 500px; height:auto;" src="{{dailyFactInfo | last.image}}" class="border img-fluid" alt="associated image">
            </a>
        </div>
    {% else %}
        <div class="col align-self-start col-12 p-1">
            <a id="image2" href="" target="blank">
                <img style="width: 500px; height:auto;" src="" class="border img-fluid" alt="associated image"></img>
            </a>
        </div>
    {% endif %}
</div>


